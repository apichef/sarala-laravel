{
    "name": "sarala-io/sarala",
    "type": "library",
    "description": "{json:api} Laravel companion",
    "keywords": [
        "sarala-io",
        "sarala"
    ],
    "homepage": "https://github.com/sarala-io/sarala",
    "license": "MIT",
    "authors": [
        {
            "name": "Milroy E. Fraser",
            "email": "milroy.me@gmail.com",
            "homepage": "https://milroy.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "illuminate/database": "^5.7",
        "illuminate/http": "^5.7",
        "league/fractal": "^0.17.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.2",
        "orchestra/testbench": "^3.7",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Sarala\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sarala\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sarala\\JsonApiServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
